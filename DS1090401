#include<stdio.h>
#include<stdlib.h>
#include<time.h>

#define SIZE 10

void bubbleSort(int *array, int n)
{
    int i, j, temp;
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < n-1; j++)
        {
            if (*(array+i+1) < *(array+j))
                {
                    temp = *(array+j+1);
                    *(array+j+1) = *(array+j);
                    *(array+j) = temp;
                }
        }
    }
}
void selectionSort(int *array, int n)
{
    int i, j, temp, index;
   for(i = 0; i<n-1; i++)
    {
      index = i;   //get index of data
      for(j = i+1; j<n; j++)
      {
         if(array[j] < array[index])
            index = j;
      }
         //placing in correct position
         temp = *(array+index);
         *(array+index) = *(array+i);
         *(array+i) = temp;
   }
}
void insertionSort(int *array, int n)
{

}

int main()
{
	int array[SIZE];
	int j, k;
	srand(time(NULL));
	for(j = 0;j < SIZE;j ++)
		array[j] = rand();

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");

	bubbleSort(array, SIZE);

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");

	for(j = 0;j < SIZE;j ++)
		array[j] = rand();

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");

	insertionSort(array, SIZE);

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");

	for(j = 0;j < SIZE;j ++)
		array[j] = rand();

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");

	selectionSort(array, SIZE);

	for(j = 0;j < SIZE;j ++)
		printf("%d ", array[j]);
	printf("\n");
}
