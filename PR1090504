#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;


int main()
{

    int num, i, j;

    cin >> num;

    for(i=1;i<=num;i++)
    {
        for(j=i;j<num;j++)
        {
            cout << " ";
        }

        for (j=2; j<=i; j++)
        {
            cout << "* ";
        }
        cout << "*" << endl;
    }

   return 0;
}
