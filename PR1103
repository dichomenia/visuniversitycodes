#include <stdio.h>
#include <stdlib.h>

int main()
{
    char ch;
    int change = 0;

    while(scanf("%c", &ch) != EOF)
    {
        if(ch == '"')
        {
            if(change % 2 == 0)
            {
                printf("``");
                change++;
            }
            else
            {
                printf("''");
                change++;
            }
        }
        else
        {
            printf("%c", ch);
        }
    }
    return 0;
}
