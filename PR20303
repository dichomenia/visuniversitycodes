#include <iostream>

using namespace std;

int check(int n, int m)
{
    int position = 0, i;
    for (i = 2; i < n; i++)
    {
        position = (position+m)%i;
    }
    //must repeat until it return 1 which is true so the condition on the bottom is met
    return position;
}

int main()
{
    int n, i;
    while (cin >> n && n)  //while true
     {
         if (n == 0)  //Input is terminated by a value of zero (0) for n
         {
             break;
         }
         for (i = 1; ; i++)
         {
             if (!check(n,i))  //returns false
             {
                 cout << i << endl;
                 break;
             }
         }
     }
    return 0;
}
