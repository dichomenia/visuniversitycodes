class Bar3D
{
  private:
  float width;
  float height;
  float depth;
  
  public:
  static int count;    
      
  Bar3D (float w, float h, float d)
  {
    width = w;
    height = h;
    depth = d;
    count++;
  }
   
  ~Bar3D()
   {
       count--;
   }
  
  float getVolume()
  {
    return (depth*width*height);
  }
  
   void operator *=(int m)
  {
   	width *= m;
    height *= m;
    depth *= m;
  }
  
};
